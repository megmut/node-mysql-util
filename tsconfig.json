{
    "compilerOptions": {
        "outDir": "bin/",
        "baseUrl": "lib",
        "target": "ES2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}